{##
 # Image Block
 # @NOTE needs lots of updates since I kind of silently deprecated Twig and concentrated on PHP templates
 #}

<figure {% if configure.element_id %} id="{{ configure.element_id }}" {% endif %} class="layout-block-image {{ configure.element_class }}">
  {% if data.content.image.srcset %}
    <img src="{{ content.image.src }}" border="0" alt="{{ content.image.title }}">
  {% else %}
    <img src="{{ content.image.src }}" border="0" alt="">
  {% endif %}
  
  {% if content.image.caption %}
    <figcaption>
      {{ content.image.caption }}
    </figcaption>
  {% endif %}
</figure>
