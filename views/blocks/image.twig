{##
 # Image Block
 #}

<figure {% if configure.element_id %} id="{{ configure.element_id }}" {% endif %} class="layout-block-image {{ configure.element_class }}">
  {% if data.content.image.srcset %}
    <img src="{{ content.image.src }}" srcset="{{ content.image.srcset }}" alt="{{ content.image.title }}" />
  {% else %}
    <img src="{{ content.image.src }}" alt="" />
  {% endif %}
  
  {% if content.image.caption %}
    <figcaption>
      {{ content.image.caption }}
    </figcaption>
  {% endif %}
  
  {{ dump() }}
</figure>
